template(name='layout')
    +menu
    .container
        +yield

template(name='menu')
    nav: nav.wrapper
        ul.left
            a Beranda
            a(href='pegawai') Pegawai
            a(href='diklat') Diklat
        a.brand-logo.center Diklat Izan
        ul.right
            a Login
            a Register
            a Logout

template(name='home')
    h4 Beranda

template(name='pegawai')
    h4 Daftar Pegawai
    .btn.right#insert Tambah
    if insert
        +quickForm(
            collection = 'pegawais'
            schema = pegawaiS
            type = 'insert'
            id = 'insertPegawai'
        )
    if edit
        +quickForm(
            collection = 'pegawais'
            schema = pegawaiS
            type = 'update'
            id = 'updatePegawai'
            doc = data
        )
        .btn.right#close Tutup
    table
        thead
            tr
                th Nama
                th NIP
                th Pangkat
                th Jabatan
                th Bidang
                th Disiplin
                th Aksi
        tbody
            each datas
                tr#update
                    td= nama
                    td= nip
                    td= pangkat
                    td= jabatan
                    td= bidang
                    td= disiplin
                    td: .btn-flat#remove Hapus

template(name='diklat')
    h4 Daftar Diklat
    .btn.right#insert Tambah
    if insert
        +quickForm(
            collection = 'diklats'
            schema = diklatS
            type = 'insert'
            id = 'insertDiklat'
        )
    table
        thead
            tr
                th Judul
                th Tanggal
                th Disiplin
                th Tempat
                th Aksi
        tbody
            each datas
                tr
                    td= judul
                    td= tanggal
                    td= disiplin
                    td= tempat
                    td
                        a(href='/diklat/{{_id}}') Rincian
                        a Hapus

template(name='rincian')
    h4 Rincian Diklat
    p= data.judul
    p= data.tanggal
    p= data.disiplin
    p= data.tempat
